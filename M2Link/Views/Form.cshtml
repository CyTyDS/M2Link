@model M2Link.Models.RegisterModel

@{
    ViewBag.Title = "Form";
}

<h2>Form</h2>

@using (Html.BeginForm()) {


<!-- Mettre des EditorFor à la place des TextBoxFor -->

<fieldset>
    <div class="form-group">
        @Html.LabelFor(m => m.Nom)
        @Html.TextBoxFor(m => m.Nom)
    </div>
    <div class="form-group">

        @Html.LabelFor(m => m.Prenom)
        @Html.TextBoxFor(m => m.Prenom)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email)
    </div>
    <div class="form-group">
         @Html.LabelFor(m => m.Pseudo)
         @Html.TextBoxFor(m => m.Pseudo)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Mdp)
        @Html.TextBoxFor(m => m.Mdp)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.VerifMDP)
        @Html.TextBoxFor(m => m.VerifMDP)
    </div>
    @Html.ValidationMessageFor(m => m.Mdp)
    <p>
        <button type="submit">Submit</button>
    </p>

</fieldset>

}


