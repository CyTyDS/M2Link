@model M2Link.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

    <div class="text-center">
        @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @style="width: 100%; max-width: 330px; padding: 15px; margin: 0 auto;" }))
        { 
            <div class="container">
                <h2 class="float-left mb-0">Log In</h2>
                <a href="#" class="btn btn-outline-primary float-right" role="button">Sign up</a>
                <div>&nbsp;</div>
            </div>
            <div class="my-3">
                @Html.LabelFor(m => m.Pseudo)
                @Html.EditorFor(m => m.Pseudo, new { htmlAttributes = new { @class = "form-control m-auto" } })
                @Html.LabelFor(m => m.Mdp)
                @Html.PasswordFor(m => m.Mdp, new { @class = "form-control m-auto", @placeholder = "******" })
            </div>
            
            @Html.ValidationSummary()
            <button type="submit" class="btn btn-primary">Login</button>

        }
    </div>
