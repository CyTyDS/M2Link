@model M2Link.Models.ProfileModel

@{
    ViewBag.Title = "Profile";
}

<h2>Votre profil</h2>

@using (Html.BeginForm())
{

    <fieldset>
        <div class="form-group">
            @Html.LabelFor(m => m.Nom)
            @Html.EditorFor(m => m.Nom)
        </div>
        <div class="form-group">

            @Html.LabelFor(m => m.Prenom)
            @Html.EditorFor(m => m.Prenom)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email)
            @Html.EditorFor(m => m.Email)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Pseudo)
            @Html.EditorFor(m => m.Pseudo)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Mdp)
            @Html.PasswordFor(m => m.Mdp)
        </div>

        @Html.ValidationSummary()
        <p>
            <button type="submit">Submit</button>
        </p>
    </fieldset>

}

<h2>Vos messages</h2>

<ul class="list-group">
    @foreach (var x in Model.Messages)
    {
        <li class="list-group-item">@x.Content</li>
    }
</ul>
