@model M2Link.Models.ProfileModel

@{
    ViewBag.Title = "Profile";
}

<h2>Votre profil</h2>

@using (Html.BeginForm())
{

    <fieldset>
        <div class="form-group">
            @Html.LabelFor(m => m.Nom)
            @Html.EditorFor(m => m.Nom, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">

            @Html.LabelFor(m => m.Prenom)
            @Html.EditorFor(m => m.Prenom, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email)
            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Pseudo)
            @Html.EditorFor(m => m.Pseudo, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Mdp)
            @Html.PasswordFor(m => m.Mdp, new { @class = "form-control", @placeholder = "******" })
        </div>

        @Html.ValidationSummary()
        <p>
            <button type="submit" class="btn btn-primary">Submit</button>
        </p>
    </fieldset>

}

<h2>Vos messages</h2>

<ul class="list-group">
    @if (Model.Messages != null)
    {
        foreach (var x in Model.Messages)
        {
            <li class="list-group-item">@x.Content</li>
        }
    }
</ul>
