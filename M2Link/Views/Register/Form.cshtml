@model M2Link.Models.RegisterModel

@{
    ViewBag.Title = "Form";
}

<h2>Form</h2>

@using (Html.BeginForm())
{

<fieldset>
    <div class="form-group">
        @Html.LabelFor(m => m.Nom)
        @Html.EditorFor(m => m.Nom, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">

        @Html.LabelFor(m => m.Prenom)
        @Html.EditorFor(m => m.Prenom, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Pseudo)
        @Html.EditorFor(m => m.Pseudo, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Mdp)
        @Html.PasswordFor(m => m.Mdp, new { @class = "form-control", @placeholder = "******" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.VerifMDP)
        @Html.PasswordFor(m => m.VerifMDP, new { @class = "form-control", @placeholder = "******" })
    </div>

    @Html.ValidationSummary()
    <p>
        <button class="btn btn-primary" type="submit">Submit</button>
    </p>

</fieldset>

}
